<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <!-- 用于改变 EditText 底部横线的颜色 -->
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决 Toolbar 左边残留空白部分的问题 -->
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="AppTheme.AlertDialog">
        <!-- 该属性解决对话框宽度被固定的问题 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="AppTheme.LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/edit_text_left_padding</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.ClickableTextView">
        <item name="android:textSize">@dimen/text_size_h</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
