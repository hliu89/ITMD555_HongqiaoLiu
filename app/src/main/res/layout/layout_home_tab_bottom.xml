<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_height_real"
    android:layout_alignParentBottom="true"
    android:background="@android:color/transparent">
    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height_virtual"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/rl_tab1"
            style="?android:actionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_tab_icon1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@mipmap/tab_icon_truck" />

            <TextView
                android:id="@+id/tv_tab_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_icon1"
                android:layout_centerHorizontal="true"
                android:text="Looking for a car"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_s" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab2"

            style="?android:actionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_tab_icon2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:padding="1dp"
                android:src="@mipmap/tab_icon_cargo" />

            <TextView
                android:id="@+id/tv_tab_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_icon2"
                android:layout_centerHorizontal="true"
                android:text="find customer"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_s" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_tab_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/tv_tab_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_icon"
                android:layout_centerHorizontal="true"
                android:text="release"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_s" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab3"
            style="?android:actionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_tab_icon3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:padding="1dp"
                android:src="@mipmap/tab_icon_message" />

            <TextView
                android:id="@+id/tv_tab_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_icon3"
                android:layout_centerHorizontal="true"
                android:text="information"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_s" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tab4"
            style="?android:actionButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_tab_icon4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@mipmap/tab_icon_me" />

            <TextView
                android:id="@+id/tv_tab_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_icon4"
                android:layout_centerHorizontal="true"
                android:text="my profile"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_size_s" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignTop="@id/tab"
        android:background="@drawable/shadow_black" />

    <ImageView
        android:id="@+id/iv_tab_publish"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_primary"
        android:gravity="center"
        android:padding="10dp"
        android:src="@mipmap/ic_publish" />
</RelativeLayout>